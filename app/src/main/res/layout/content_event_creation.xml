<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.main.edit.EventCreationActivity"
    tools:showIn="@layout/activity_event_creation">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:orientation="vertical"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:weightSum="1">

    <Button
        android:id="@+id/etInputDate"
        style="?attr/selectableItemBackgroundBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:singleLine="true"
        android:textColor="@color/black_overlay"
        android:textColorHint="@color/blue"
        android:textSize="20sp"
        tools:text="Today"
        />


    <Button
        android:id="@+id/etInputTime"
        style="?attr/selectableItemBackgroundBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:textColor="@color/black_overlay"
        android:textColorHint="@color/blue"
        android:textSize="20sp"
        tools:text="at 7 pm"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="8dp"
        android:text="@string/events_i_want_play"
        android:textAppearance="?android:textAppearanceMedium"
        />

    <Spinner
        android:id="@+id/spinnerGame"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/games"
        tools:listitem="@layout/spinner_item"/>

    <Button
        android:id="@+id/etEventPlace"
        style="?attr/selectableItemBackgroundBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:textColor="@color/black_overlay"
        android:textColorHint="@color/blue"
        android:textSize="20sp"
        tools:text="at"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

      <EditText
          android:id="@+id/etDescription"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="top"
          android:hint="@string/events_description_hint"
          android:inputType="text|textMultiLine"
          android:lines="3"
          android:nextFocusLeft="@id/etDescription"
          android:nextFocusUp="@id/etDescription"
          android:textColor="@color/black_overlay"
          android:textColorHint="@color/blue"
          android:textSize="20sp"
          />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        android:text="@string/action_done"
        android:textColor="@color/mdtp_white"
        />
  </LinearLayout>

</android.support.v4.widget.NestedScrollView>
