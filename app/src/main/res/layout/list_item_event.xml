<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingTop="16dp"
    >

  <TextView
      android:id="@+id/textEventPlace"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="4dp"
      android:textSize="26sp"
      tools:text="Somewhere"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/textEventParticipantsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_people_black_24px"
        android:drawablePadding="4dp"
        android:minEms="4"
        android:paddingRight="8dp"
        android:textSize="18sp"
        tools:text="5"
        />

    <TextView
        android:id="@+id/textEventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_time_black_24px"
        android:drawablePadding="4dp"
        android:textSize="18sp"
        tools:text="19:00"
        />

  </LinearLayout>

</LinearLayout>